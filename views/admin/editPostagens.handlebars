{{#each erros}}
<div class="alert alert-danger">{{this.text}}</div>
{{/each}}


<h3>Editar postagem</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/postagem/edit" method="POST">
        <input type="hidden" name="id" value="{{this.postagem._id}}">
        <label for="titulo">Titulo: </label>
        <input type="text" name="titulo" class="form-control" value="{{this.postagem.titulo}}">
        
        <label for="slug">Slug: </label>
        <input type="text" name="slug" class="form-control" value="{{this.postagem.slug}}">
        
        <label for="descricao">Descrição: </label>
        <input type="text" name="descricao" class="form-control" value="{{this.postagem.descricao}}">
        
        <label for="conteudo">Conteúdo: </label>
        <textarea name="conteudo" class="form-control">{{this.postagem.conteudo}}</textarea>
        
        <label for="categoria">Categoria: </label>
        <select name="categoria" class="form-select">
            {{#each categoria}}
            <option value={{this._id}}>{{this.name}}</option>
            {{else}}
            <option value="0">Nenhuma categoria registrada</option>
            {{/each}}
        </select> 
        
           <button type="submit" class="btn btn-success mt-2">Editar postagem</button>
        </form>
    </div>
</div>