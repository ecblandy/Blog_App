<h1>{{#if categoria}}{{categoria.name}}{{else}}Categoria não encontrada{{/if}}</h1>

{{#each postagens}}
  <div class='card mt-4'>
    <div class='card-body'>

      <h3>{{this.titulo}}</h3>
      <p>{{this.descricao}}</p>
      <a href='/postagem/{{this.slug}}'><button class='btn btn-success'>Leia
          mais</button></a>
      <hr />
      <small>Data de publicação: {{this.data}}</small>
    </div>
  </div>
{{else}}
  <h5>Nenhuma postagem</h5>
{{/each}}